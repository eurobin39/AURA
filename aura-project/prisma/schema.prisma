generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int           @id @default(autoincrement())
  email      String        @unique
  username   String        @unique
  password   String
  focusLogs FocusLog[] @relation("UserFocusLogs")
  WorkSession WorkSession[]
  FocusInsight FocusInsight[]
  FaceFocusLog FaceFocusLog[] @relation("FaceFocusLogs")
  lowFocusAlert    Boolean @default(true)
  feedbackInterval Int     @default(60) // in minutes
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model FocusLog {
  id            Int      @id @default(autoincrement())
  timestamp     DateTime @default(now())
  keyboard      Int
  mouseClicks   Int
  mouseDistance Int
  focusScore    Float
  userId        Int
  user          User     @relation(fields: [userId], references: [id], name: "UserFocusLogs")
}

model WorkSession {
  id          Int           @id @default(autoincrement())
  startTime   DateTime      @default(now())
  endTime     DateTime?
  activeApps  String[]
  userId      Int
  User        User          @relation(fields: [userId], references: [id])
  insights    FocusInsight[]
}

model FocusInsight {
  id            Int         @id @default(autoincrement())
  date          DateTime    @default(now())
  summary       String
  score         Float
  userId        Int
  User          User        @relation(fields: [userId], references: [id])
  workSessionId Int?
  WorkSession   WorkSession? @relation(fields: [workSessionId], references: [id])
}

model FaceFocusLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  focusScore Float
  yaw        Float
  pitch      Float
  userId     Int
  user       User     @relation(fields: [userId], references: [id], name: "FaceFocusLogs")
}

model FocusInsight {
  id            Int         @id @default(autoincrement())
  date          DateTime    @default(now())
  summary       String
  score         Float
  userId        Int
  User          User        @relation(fields: [userId], references: [id])
  workSessionId Int?
  WorkSession   WorkSession? @relation(fields: [workSessionId], references: [id])
}